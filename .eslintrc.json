{
  "extends": ["react-app", "react-app/jest"],
  "rules": {
    "no-unused-vars": "warn",
    "react-hooks/exhaustive-deps": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    "build/",
    "dist/",
    "coverage/",
    "*.config.js",
    "*.test.js",
    "*.spec.js"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
